#!/bin/bash

curdir="`dirname $(readlink -f $0)`"
source $curdir/../../lib/common.sh

    if ! grep "PS1=.*"'`hostname -i`' ~/.bashrc; then
cat <<__EOF__ >> ~/.bashrc
PS1='╔║ \u@\[\033[1;34m\]\`hostname -i\`\[\033[00m\] \[\033[1;35m\]\w\[\033[00m\] \n╚═ \[\033[1;30m\](\D{%F %T})\[\033[00m\] >> '
__EOF__
    fi

cecho g "bash plus ready!"
cecho r 'need to run "source ~/.bashrc"'
